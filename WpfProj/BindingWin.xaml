<Window x:Class="WpfProj.BindingWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProj"
        mc:Ignorable="d"
        Title="BindingWin" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Slider x:Name="slider" Height="20" Margin="10"/>
            <TextBox Text="{Binding ElementName=slider, Path=Value, Mode=OneTime}"  Height="20" Margin="10"/>
            <TextBox Text="{Binding ElementName=slider, Path=Value, Mode=OneWay}" Height="20" Margin="10"/>
            <TextBox Text="{Binding ElementName=slider, Path=Value,Mode=OneWayToSource}" Height="20" Margin="10"/>
            <TextBox Text="{Binding ElementName=slider, Path=Value,Mode=TwoWay}" Height="20" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
