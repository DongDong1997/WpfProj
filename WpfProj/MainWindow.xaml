<Window x:Class="WpfProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProj"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel>
            <Button Width="150" Height="80" Click="Button_Click_1">
                <TextBlock Text="布局Win" FontSize="30"/>
            </Button>
            <Button Width="150" Height="80" Click="Button_Click_2">
                <TextBlock Text="样式Win" FontSize="30"/>
            </Button>
            <Button Width="200" Height="80" Click="Button_Click_3">
                <TextBlock Text="模板控制Win" FontSize="30"/>
            </Button>
            <Button Width="150" Height="80" Click="Button_Click_4">
                <TextBlock Text="数据Win" FontSize="30"/>
            </Button>
            <Button Width="150" Height="80" Click="Button_Click_5">
                <TextBlock Text="绑定Win" FontSize="30"/>
            </Button>
        </WrapPanel>
    </Grid>
</Window>
